{
	"compilerOptions": {
		"baseUrl": "./src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "preserve",
		"target": "esnext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ESNext",
			"ES7"
		],
	},
	"exclude": [
		"src/tests/**/*.filetest.ts*",
		"example/**/*.*"
	],
	"include": [
		"src/main.ts",
		"src/worker/*.ts",
		"src/worker/utils.ts",
		"src/worker/transform.worker.ts",
		"src/typings/**/*.d.ts"
	]
}
