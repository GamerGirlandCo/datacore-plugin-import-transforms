{
	"compilerOptions": {
		"baseUrl": "./src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "preserve",
		"target": "esnext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"exclude": [
		"src/tests/**/*.filetest.ts*"
	],
	"include": [
		"src/**/*.ts",
		"example/**/*"
, "src/worker/transform.worker.ts.not"	]
}
